{
	"name": "szenario/craft-altpilot",
	"description": "Generate and manage alt texts. Fully integrated, for thousands of assets.",
	"type": "craft-plugin",
	"license": "proprietary",
	"version": "1.0.0",
	"support": {
		"email": "support@szenario.design",
		"issues": "https://github.com/szenario-fordesigners/altpilot/issues?state=open",
		"source": "https://github.com/szenario-fordesigners/altpilot",
		"docs": "https://github.com/szenario-fordesigners/altpilot#readme",
		"rss": "https://github.com/szenario-fordesigners/altpilot/releases.atom"
	},
	"require": {
		"php": "^8.0.0",
		"craftcms/cms": "^5.0.0",
		"ilyagvc/checkhost": "1.2.3",
		"openai-php/client": "0.19.0"
	},
	"require-dev": {
		"craftcms/ecs": "dev-main",
		"craftcms/phpstan": "dev-main"
	},
	"autoload": {
		"psr-4": {
			"szenario\\craftaltpilot\\": "src/"
		}
	},
	"archive": {
		"exclude": [
			"/.github/**",
			"/.vscode/**",
			"/.idea/**",
			"/frontend/**",
			"/node_modules/**",
			"/ecs.php",
			"/phpstan.neon",
			"/pnpm-lock.yaml",
			"/pnpm-workspace.yaml",
			"/eslint.config.ts",
			"/tsconfig*.json",
			"/vite.config.ts",
			"/package.json",
			"/.prettierrc.json",
			"/.editorconfig",
			"/.gitattributes",
			"/.gitignore",
			"/CHANGELOG.md",
			"/images/**"
		]
	},
	"extra": {
		"handle": "altpilot",
		"name": "altpilot",
		"developer": "szenario",
		"developerUrl": "https://www.szenario-design.com/",
		"documentationUrl": "https://github.com/szenario-fordesigners/altpilot#readme",
		"changelogUrl": "https://github.com/szenario-fordesigners/altpilot/blob/main/CHANGELOG.md",
		"class": "szenario\\craftaltpilot\\AltPilot"
	},
	"scripts": {
		"check-cs": "ecs check --ansi",
		"fix-cs": "ecs check --ansi --fix",
		"phpstan": "phpstan --memory-limit=1G"
	},
	"config": {
		"sort-packages": true,
		"platform": {
			"php": "8.2"
		},
		"allow-plugins": {
			"yiisoft/yii2-composer": true,
			"craftcms/plugin-installer": true
		}
	}
}
